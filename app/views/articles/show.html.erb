<article class="">
  <div class="bg-img bg-cover h-50 vignette flex justify-center text-center items-center px-4" style="background-image: url(<%= rails_blob_url(@article.image) %>);">
    <h1 class="text-4xl md:text-5xl lg:text-6xl text-gray-100"><%= @article.title %></h1>
  </div>

  <div class="grid justify-center p-8 gap-16">
    <p class=" xl:max-w-screen-lg lg:max-w-screen-md md:max-w-screen-sm white-space">
      <%= @article.text %>
    </p>
    
    <div class="text-red-500 justify-self-end mr-16" id="like">
      <%= like_or_dislike_btn(@article) %>
    </div>
  </div>
  
</article>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
