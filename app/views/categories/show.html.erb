<h2><%= @category.name %></h2>

<% @category.articles.each do |article| %>
  <%= image_tag(article.image, style:'width: 256px;') if article.image.attached? %>
  <h3><%= article.title %></h3>
  <p><%= article.text %></p>
<% end %>

