<nav id="nav" class="grid grid-cols-2 lg:grid-cols-3 bg-gray-50 px-3 py-4 items-center", style= "min-height: 68px;">
      <%= link_to :root do %>
      <%= image_tag('wordent.png', class: "w-40 h-full") %>
    <% end %>

  <button id="nav-btn" data-target="#nav-links" class="hover:bg-gray-400 rounded lg:hidden ml-auto nav-toggler" >
    <i  class="material-icons">menu</i>
  </button>
  
  <div id="nav-links" class="lg:grid col-span-2 lg:grid-cols-2 lg:col-span-2 justify-center justify-items-center text-center hidden text-gray-600">
    <div class="flex flex-col lg:flex-row">
      <%= link_to "Home", :root, class: "px-5 py-1 font-semibold enlarge rounded-sm"%>
      <% get_categories.each do |category| %>
        <%= link_to category.name, category, class: "px-5 py-1 font-semibold enlarge rounded-sm" %>
      <% end %>
    </div>
    
    <div class="flex flex-col lg:justify-self-end lg:flex-row">
      <% if user_signed_in? %>
        <%= link_to "Write an article", new_article_path, class: "px-3 py-1" %>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "px-3 py-1 lg:border-2 rounded border-gray-600" %>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: "px-3 py-1" %>
        <%= link_to 'Register',  new_user_registration_path, class: "px-3 py-1" %>
      <% end %>
    </div>
  </div>
</nav>